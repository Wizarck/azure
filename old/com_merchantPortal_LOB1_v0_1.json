{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "metadata": {
                "description": "PCI or no-PCI"
            },
            "defaultValue": "no-pci",
            "allowedValues": [
				"no-pci",
                "pci"
            ]
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Define environment to deploy in"
            },
            "defaultValue": "development",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ]
        },
        "DNSAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.0.0/29",
            "metadata": {
                "description": "DNS IP Address"
            }
        },
        "vNetName": {
            "type": "string",
            "defaultValue": "commp-vnet1",
            "metadata": {
                "description": "Name for the Virtual Network (vNet)"
            }
        },
        "vNetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.32/27",
            "metadata": {
                "description": "CIDR block for the vNet"
            }
        },
        "subnetAppServName": {
            "type": "string",
            "defaultValue": "commptew1",
            "metadata": {
                "description": "Name for App Services LOB-1 Subnet"
            }
        },
        "subnetAppServAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.32/28",
            "metadata": {
                "description": "CIDR block for App Services LOB-1 Subnet"
            }
        },
        "NSGNameAppServ": {
            "type": "string",
            "defaultValue": "comit-LOB1-nsg",
            "metadata": {
                "description": "Network Security Group Name for App Services LOB-1 Subnet"
            }
        },
        "subnetHostAgentName": {
            "type": "string",
            "defaultValue": "commptew2",
            "metadata": {
                "description": "Name for Host Agent LOB-1 Subnet"
            }
        },
        "subnetHostAgentAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.56/29",
            "metadata": {
                "description": "CIDR block for Host Agent LOB-1 Subnet"
            }
        },
        "NSGNameHostAgent": {
            "type": "string",
            "defaultValue": "comit-LOB1-nsg",
            "metadata": {
                "description": "Network Security Group Name for App Services LOB-1 Subnet"
            }
        }
    },
    "variables": {
        "api-version": "2015-06-15"
    },
    "resources": [
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('NSGNameHostAgent')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "securityRules": [
                    {
                    "name": "Allow-Out-DC1",
                        "properties": {
                            "description": "NTP Sync Primary Domain Controller",
                            "protocol": "UDP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "123",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC2",
                        "properties": {
                            "description": "AD RPC Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "135",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC3",
                        "properties": {
                            "description": "AD Kerberos change Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "464",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 103,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC4",
                        "properties": {
                            "description": "AD LDAP Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 104,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC5",
                        "properties": {
                            "description": "AD LDAP GC Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3265",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 105,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC6",
                        "properties": {
                            "description": "AD DNS Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "53",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 106,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC7",
                        "properties": {
                            "description": "AD Kerberos Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "88",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 107,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC8",
                        "properties": {
                            "description": "AD SMB Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "445",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 108,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC9",
                        "properties": {
                            "description": "AD DYN Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "49152-65535",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 109,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Deny-Out-DC",
                        "properties": {
                            "description": "Deny all other Outbound traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('NSGNameAppServ')]",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "securityRules": [
                    {
