                            "destinationPortRange": "123",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 100,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC2",
                        "properties": {
                            "description": "AD RPC Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "135",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 101,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC3",
                        "properties": {
                            "description": "AD Kerberos change Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "464",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 103,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC4",
                        "properties": {
                            "description": "AD LDAP Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "389",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 104,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC5",
                        "properties": {
                            "description": "AD LDAP GC Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3265",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 105,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC6",
                        "properties": {
                            "description": "AD DNS Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "53",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 106,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC7",
                        "properties": {
                            "description": "AD Kerberos Primary DC",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "88",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 107,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC8",
                        "properties": {
                            "description": "AD SMB Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "445",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 108,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Allow-Out-DC9",
                        "properties": {
                            "description": "AD DYN Primary DC",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "49152-65535",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Allow",
                            "priority": 109,
                            "direction": "Outbound"
                        }
                    },
                    {
                    "name": "Deny-Out-DC",
                        "properties": {
                            "description": "Deny all other Outbound traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "[parameters('DNSAddressPrefix')]",
                            "access": "Deny",
                            "priority": 110,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "[variables('api-version')]",
            "type": "Microsoft.Network/virtualNetworks",
            "name": "[parameters('vNetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('NSGNameAppServ'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('NSGNameHostAgent'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('vNetAddressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('subnetAppServName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetAppServAddressPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('NSGNameAppServ'))]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('subnetHostAgentName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetHostAgentAddressPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('NSGNameHostAgent'))]"
                            }
                        }
                    }
                ]
            }
        }
    ]
}