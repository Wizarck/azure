{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "securityHubVNET": {
            "type": "string",
            "defaultValue": "comit-vnet",
            "metadata": {
                "description": "Name of the existing vNet, Security Hub"
            }
        },
        "domainControllerManagementSubnetName": {
            "type": "string",
            "defaultValue": "domainControllerManagement",
            "metadata": {
                "description": "Name of the existing Subnet that will contain the Domain Controller Management Virtual Machine (DCMVM)"
            }
        },
        "domainControllerManagementVmName": {
            "type": "string",
            "defaultValue": "DCMVM",
            "metadata": {
                "description": "Name for the Domain Controller Management Virtual Machine (DCVM)"
            }
        },
        "domainControllerManagementVmAdminUsername": {
            "type": "string",
            "defaultValue": "systemAdmin",
            "metadata": {
                "description": "Name of admin user of Domain Controller Management Virtual Machine (DCMVM)"
            }
        },
        "domainControllerManagementVmAdminPassword": {
            "type": "securestring",
            "defaultValue": "PassWord012!",
            "metadata": {
                "description": "Password for admin user of Domain Controller Management Virtual Machine (DCMVM)"
            }
        }
    },
    "variables": {     
        "domainControllerManagementVmSize": "Standard_D1_v2",
        "domainControllerManagerVmNicName": "[concat(parameters('domainControllerManagementVmName'),'-nic')]",
        "subnetRef": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('securityHubVNET'), parameters('domainControllerManagementSubnetName'))]"
    },
    "resources": [
        {
            "name": "[variables('domainControllerManagerVmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }                            
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('domainControllerManagementVmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('domainControllerManagerVmNicName'))]"         
            ],
            "properties": {
                "licenseType": "Windows_Server",
                "hardwareProfile": {
                    "vmSize": "[variables('domainControllerManagementVmSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('domainControllerManagementVmName')]",
                    "adminUsername": "[parameters('domainControllerManagementVmAdminUsername')]",
                    "adminPassword": "[parameters('domainControllerManagementVmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },                
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('domainControllerManagerVmNicName'))]"
                        }
                    ]
                }                
            }
        },
        {
            "name": "microsoft.antimalware-windows-20170925144054",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('domainControllerManagementVmName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://gallery.azure.com/artifact/20161101/microsoft.antimalware-windows-arm.1.0.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('domainControllerManagementVmName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "1"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('domainControllerManagementVmAdminUsername')]"
        }
    }
}