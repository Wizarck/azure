{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "comit-vnet",
            "metadata": {
                "description": "Name of the existing vNet where the VM will be deployed"
            }
        },
        "subnetName": {
            "type": "string",
            "defaultValue": "domainControllerMgmtSubnet",
            "metadata": {
                "description": "Name for the Domain Controller Management Subnet"
            }
        },
        "SubnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.0.8/29",
            "metadata": {
                "description": "CIDR block for Domain Controller Management Subnet"
            }
        },
        "virtualMachineName": {
            "type": "string",
            "defaultValue": "DCMgmt",
            "metadata": {
                "description": "Name of the VM to create"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D1_v2",
            "metadata": {
                "description": "Size of the VM"
            }
        },
        "networkInterfaceName": {
            "type": "string",
            "defaultValue": "comitpew-nic",
            "metadata": {
                "description": "Name for the NIC of the VM"
            }
        },
        "adminUsername": {
            "type": "string",
            "defaultValue": "adminAccenture",
            "metadata": {
                "description": "Name of admin user"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "defaultValue": "Accenture01!",
            "metadata": {
                "description": "Password for admin user of VM"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "Type of the Storage Account"
            }            
        }
    },
    "variables": {     
        "api-version": "2016-03-30",
        "storage-api-version": "2016-01-01",
        "storageAccountName": "[concat(uniquestring(resourceGroup().id), 'dcmgmtvm')]",
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', parameters('virtualNetworkName'))]",
        "subnetRef": "[concat(variables('vnetId'), '/subnets/', parameters('subnetName'))]"     
    },
    "resources": [
        {
            "name": "[concat(parameters('virtualNetworkName'), '/', parameters('subnetName'))]",
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "[variables('api-version')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "addressPrefix": "[parameters('SubnetAddressPrefix')]"
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        }
    }
}