{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "metadata": {
                "description": "PCI or no-PCI"
            },
            "defaultValue": "no-pci",
            "allowedValues": [
				"no-pci",
                "pci"
            ]
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Define environment to deploy in"
            },
            "defaultValue": "development",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ]
        },
        "vNetName": {
            "type": "string",
            "defaultValue": "vNetA",
            "metadata": {
                "description": "Name for the Virtual Network (vNet) where the Subnet GW is going to be deploy"
            }
        },
        "vNetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.3.0.0/16",
            "metadata": {
                "description": "CIDR block for the vNet"
            }
        },
        "subnetDefaultName": {
            "type": "string",
            "defaultValue": "SubnetVnet1",
            "metadata": {
                "description": "Name for Default Subnet of vNet"
            }
        },
        "subnetDefaultAddressPrefix": {
            "type": "string",
            "defaultValue": "10.3.0.0/25",
            "metadata": {
                "description": "CIDR block for Default Subnet"
            }
        },
        "subnetGatewayAddressPrefix": {
            "type": "string",
            "defaultValue": "10.3.0.128/25",
            "metadata": {
                "description": "CIDR block for the Subnet Gateway of vNet"
            }
        },
        "vpnGatewayName": {
            "type": "string",
            "defaultValue": "vpnGateway",
            "metadata": {
                "description": "Name for the VPN Gateway"
            }
        },
        "vpnGatewayPublicIPName": {
            "type": "string",
            "defaultValue": "vpnGatewayPublicIP",
            "metadata": {
                "description": "Name for the Public IP of the VPN Gateway"
            }
        }
    },
    "variables": {
        "vpnGatewaySku": "VpnGw1",
        "vnetID": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vNetName'))]",
        "gatewaySubnetRef": "[concat(variables('vnetID'),'/subnets/','GatewaySubnet')]",
        "api-version": "2015-06-15"
    },
    "resources": [
      {
        "apiVersion": "[variables('api-version')]",
        "type": "Microsoft.Network/virtualNetworks",
        "name": "[parameters('vNetName')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "complianceProfile": "[parameters('complianceProfile')]",
            "environment": "[parameters('environment')]",
            "tier": "communications"
        },
        "properties": {
          "addressSpace": {
            "addressPrefixes": [
              "[parameters('vNetAddressPrefix')]"
            ]
          },
          "subnets": [
            {
              "name": "[parameters('subnetDefaultName')]",
              "properties": {
                "addressPrefix": "[parameters('subnetDefaultAddressPrefix')]"
              }
            },
            {
              "name": "GatewaySubnet",
              "properties": {
                "addressPrefix": "[parameters('subnetGatewayAddressPrefix')]"
              }
            }
          ]
        }
      },
      {
        "apiVersion": "[variables('api-version')]",
        "type": "Microsoft.Network/publicIPAddresses",
        "name": "[parameters('vpnGatewayPublicIPName')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "complianceProfile": "[parameters('complianceProfile')]",
            "environment": "[parameters('environment')]",
            "tier": "communications"
        },
        "properties": {
          "publicIPAllocationMethod": "Dynamic"
        }
      },
      {
        "apiVersion": "[variables('api-version')]",
        "type": "Microsoft.Network/virtualNetworkGateways",
        "name": "[parameters('vpnGatewayName')]",
        "location": "[resourceGroup().location]",
        "tags": {
            "complianceProfile": "[parameters('complianceProfile')]",
            "environment": "[parameters('environment')]",
            "tier": "communications"
        },
        "dependsOn": [
          "[concat('Microsoft.Network/publicIPAddresses/', parameters('vpnGatewayPublicIPName'))]",
          "[concat('Microsoft.Network/virtualNetworks/', parameters('vNetName'))]"
        ],
        "properties": {
          "ipConfigurations": [
            {
              "properties": {
                "privateIPAllocationMethod": "Dynamic",
                "subnet": {
                  "id": "[variables('gatewaySubnetRef')]"
                },
                "publicIPAddress": {
                  "id": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('vpnGatewayPublicIPName'))]"
                }
              },
              "name": "vnetGatewayConfig"
            }
          ],
          "sku": {
            "name": "[variables('vpnGatewaySku')]",
            "tier": "[variables('vpnGatewaySku')]"
          },
          "gatewayType": "Vpn",
          "vpnType": "RouteBased",
          "enableBgp": "false"
        }
      }
    ]
}