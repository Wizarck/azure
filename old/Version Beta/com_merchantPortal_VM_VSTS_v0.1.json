{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "VNETName": {
            "type": "string",
            "metadata": {
                "description": "Name for the Virtual Network (vNet)"
            }
        },
        "VSTSSubnetName": {
            "type": "string",
            "metadata": {
                "description": "Name for VSTS Hosted Agent"
            }
        },
        "VSTSVirtualMachineName": {
            "type": "string",
            "metadata": {
                "description": "Name for VSTS Hosted Agent Virtual Machine (VM)"
            }
        },
        "VSTSVirtualMachineSize": {
            "type": "string",
            "metadata": {
                "description": "Size of the VM for the VSTS Hosted Agent"
            }
        },
        "VSTSVmAdminUsername": {
            "type": "string",
            "metadata": {
                "description": "Name of admin user of the VSTS Hosted Agent VM"
            }
        },
        "VSTSVmAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for admin user of VSTS Hosted Agent VM"
            }
        }
    },
    "variables": {
        "subnetRef": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('VNETName'), parameters('VSTSSubnetName'))]",
        "VSTSVmNicName": "[concat(parameters('VSTSVirtualMachineName'),'-nic')]"
    },
    "resources": [
        {
            "name": "[variables('VSTSVmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig-',variables('VSTSVmNicName'))]",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }                            
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('VSTSVirtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",            
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('VSTSVmNicName'))]"       
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "alm"
            },
            "properties": {
                "licenseType": "Windows_Server",
                "hardwareProfile": {
                    "vmSize": "[parameters('VSTSVirtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('VSTSVirtualMachineName')]",
                    "adminUsername": "[parameters('VSTSVmAdminUsername')]",
                    "adminPassword": "[parameters('VSTSVmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftVisualStudio",
                        "offer": "VisualStudio",
                        "sku": "VS-2017-Ent-Latest-WS2016",
                        "version": "latest"
                    },                
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VSTSVmNicName'))]"
                        }
                    ]
                }                
            }
        },
        {
            "name": "[concat(parameters('VSTSVirtualMachineName'),'-antimalware')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('VSTSVirtualMachineName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://gallery.azure.com/artifact/20161101/microsoft.antimalware-windows-arm.1.0.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('VSTSVirtualMachineName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "1"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            }
        }
    ]
}