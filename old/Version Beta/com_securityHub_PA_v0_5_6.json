{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.16",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "virtualNetworkSuscriptionID": {
            "type":"string",
            "metadata": {
                "description": "Suscription ID of Virtual Network Security Hub"
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "metadata": {
                "description": "Resource Group of Virtual Network Security Hub"
            }
        },
        "virtualNetworkName": {
            "type": "string",
            "defaultValue": "comit-vnet1",
            "metadata": {
                "description": "Name of the existing Virtual Network (VNET) of Security Hub"
            }           
        },  
        "dmzManagementPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.80/28",
            "metadata": {
                "description": "dmzManagement subnet CIDR"
            }
        },
        "dmzTrustedPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.64/28",
            "metadata": {
                "description": "dmzTrusted subnet CIDR"
            }
        },
        "dmzPublicUntrustedPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.32/28",
            "metadata": {
                "description": "dmzPublicUntrusted subnet CIDR"
            }
        },
        "dmzPrivateUntrustedPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.48/28",
            "metadata": {
                "description": "dmzPrivateUntrusted subnet CIDR"
            }
        },
        "PALocation": { 
            "type": "string",             
            "allowedValues": [ 
                "North Europe", 
                "West Europe"
            ], 
            "defaultValue": "West Europe",
            "metadata": {
                "description": "Location for the Palo Alto Firewall"
            }
        },     
        "PAManagementPrefix": {
            "type": "string",
            "defaultValue": "0.0.0.0/0",
            "metadata": {
                "description": "Management IP address Prefix"
            }            
        },
        "PAVmName": {
            "type": "string",
            "metadata": {
                "description": "Name of Palo Alto Firewall"
            },
            "defaultValue": "comitaptew"
        },
        "PAVmSize": {
            "type": "string",
            "allowedValues": [
                "Standard_D3",
                "Standard_D4",
                "Standard_D3_v2",
                "Standard_D4_v2",
                "Standard_D5_v2",
                "Standard_A4"
            ],
            "defaultValue": "Standard_D3_v2",
            "metadata": {
                "description": "VM size for Palo Alto Firewall"
            }           
        },
        "PAAdminUsername": {
            "type": "string",
            "defaultValue": "Administrador",
            "metadata": {
                "description": "Username of the administrator account of Palo Alto Firewall"
            }
        },
        "PAAdminPassword": {
            "type": "securestring",
            "defaultValue": "PassWord012!",
            "metadata": {
                "description": "Password for the administrator account of Palo Alto Firewall"
            }
        },
        "PAPublicIPAddressName": {
            "type": "string",
            "defaultValue": "comitaptew-pip0",
            "metadata": {
                "description": "Name of existing public IP resource"
            }
        },
        "PAStorageAccountSKU": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS",
                "Premium_LRS"
            ],
            "metadata": {
                "description": "SKU for Palo Alto Storage Account"
            }            
        },          
        "caixaAddressPrefix": {
            "type": "string",
            "defaultValue": "10.126.0.0/16",
            "metadata": {
                "description": "VPN Route subnet CIDR"
            }
        },        
        "dmzL7PublicFrontEndPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.16/28",
            "metadata": {
                "description": "DMZ L7 Public Front End Route subnet CIDR"
            }
        },        
        "GatewayAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.24.96/28",
            "metadata": {
                "description": "VPN Gateway subnet CIDR"
            }
        }
    },
    "variables": {
        "PAStorageAccountName": "[concat('comitappew',uniqueString(resourceGroup().id))]",
        "imagePublisher": "paloaltonetworks",
        "imageSku": "byol",
        "imageOffer": "vmseries1",
        "imageVersion": "8.0.0",
        "NameForNSGOfDMZManagement": "comit-dmzManagement-nsg",
        "NameForNSGOfDMZPublicUntrusted": "comit-dmzPublicUntrusted-nsg",
        "NameForNSGOfDMZPrivateUntrusted": "comit-dmzPrivateUntrusted-nsg",
        "NameForNSGOfDMZTrusted": "comit-dmzTrusted-nsg",
        "nicName": "[concat(parameters('PAVmName'), '-nic')]",
        "subnet0Name": "dmzManagement",        
        "subnet1Name": "dmzTrusted",
        "subnet2Name": "dmzPublicUntrusted",
        "subnet3Name": "dmzPrivateUntrusted",
        "subnet0Ref": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets/',parameters('virtualNetworkName'),variables('subnet0Name'))]",
        "subnet1Ref": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets/',parameters('virtualNetworkName'),variables('subnet1Name'))]",
        "subnet2Ref": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets/',parameters('virtualNetworkName'),variables('subnet2Name'))]",
        "subnet3Ref": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets/',parameters('virtualNetworkName'),variables('subnet3Name'))]",
        "publicIPAddressType": "Dynamic"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('PAStorageAccountName')]",
            "apiVersion": "2015-06-15",
            "location": "[parameters('PALocation')]",
            "properties": {
                "accountType": "[parameters('PAStorageAccountSKU')]"
            }
        },
        {
            "name": "[parameters('PAPublicIPAddressName')]",            
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2015-06-15",
            "location": "[parameters('PAlocation')]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
              "publicIPAllocationMethod": "[variables('publicIPAddressType')]",
              "dnsSettings": {
                "domainNameLabel": "[parameters('PAPublicIPAddressName')]"
              }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "VirtualNetworkExternalDeployment",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('VirtualNetworkResourceGroup')]",
            "properties": {
                "mode": "Incremental",
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {},
                    "variables": {},
                    "resources": [
                        {            
                            "name": "[variables('NameForNSGOfDMZManagement')]",
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "apiVersion": "2015-06-15",
                            "location": "[parameters('PAlocation')]",
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "security"
                            },
                            "properties": {
                                "securityRules": [
                                    {
                                        "name": "allow-sshManagement-inbound",
                                        "properties": {
                                            "description": "SSH Management (TCP/22)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "22",
                                            "sourceAddressPrefix": "[parameters('PAManagementPrefix')]",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 160,
                                            "direction": "Inbound"
                                        }
                                    }, 
                                    {
                                        "name": "https-inbound",
                                        "properties": {
                                            "description": "HTTPS API Mgmt (TCP/443)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "443",
                                            "sourceAddressPrefix": "[parameters('PAManagementPrefix')]",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 300,
                                            "direction": "Inbound"
                                        }
                                    }, 
                                    {
                                        "name": "deny-all-inbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-sshManagement-outbound",
                                        "properties": {
                                            "description": "SSH Management (TCP/22)",
                                            "protocol": "*",
                                            "sourcePortRange": "22",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "[parameters('PAManagementPrefix')]",
                                            "access": "Allow",
                                            "priority": 160,
                                            "direction": "Outbound"
                                        }
                                    }, 
                                    {
                                        "name": "https-outbound",
                                        "properties": {
                                            "description": "HTTPS API Mgmt (TCP/443)",
                                            "protocol": "*",
                                            "sourcePortRange": "443",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "[parameters('PAManagementPrefix')]",
                                            "access": "Allow",
                                            "priority": 300,
                                            "direction": "Outbound"
                                        }
                                    }, 
                                    {
                                        "name": "deny-all-outbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Outbound"
                                        }
                                    }
                                ]
                            }
                        },
                        {            
                            "name": "[variables('NameForNSGOfDMZPublicUntrusted')]",
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "apiVersion": "2015-06-15",
                            "location": "[parameters('PAlocation')]",
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "security"
                            },
                            "properties": {
                                "securityRules": [
                                    {
                                        "name": "allow-applicationGateway-inbound",
                                        "properties": {
                                            "description": "Application Gateway to FW (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "[parameters('dmzL7PublicFrontEndPrefix')]",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 160,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-azureLoadBalancer",
                                        "properties": {
                                            "description": "Load Balancer Azure (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "AzureLoadBalancer",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 510,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-inbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-all-internet",
                                        "properties": {
                                            "description": "FW to Internet (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "INTERNET",
                                            "access": "Allow",
                                            "priority": 170,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-outbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Outbound"
                                        }
                                    }

                                ]
                            }
                        },
                        {            
                            "name": "[variables('NameForNSGOfDMZPrivateUntrusted')]",
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "apiVersion": "2015-06-15",
                            "location": "[parameters('PAlocation')]",
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "security"
                            },
                            "properties": {
                                "securityRules": [
                                    {
                                        "name": "allow-vpnCaixa-inbound",
                                        "properties": {
                                            "description": "VPN Inbound Routes (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "[parameters('caixaAddressPrefix')]",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 440,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-inbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-vpnCaixa-outbound",
                                        "properties": {
                                            "description": "Caixa VPN Outbound (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "[parameters('caixaAddressPrefix')]",
                                            "access": "Allow",
                                            "priority": 440,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-outbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Outbound"
                                        }
                                    }

                                ]
                            }
                        },
                        {            
                            "name": "[variables('NameForNSGOfDMZTrusted')]",
                            "type": "Microsoft.Network/networkSecurityGroups",
                            "apiVersion": "2015-06-15",
                            "location": "[parameters('PAlocation')]",
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "security"
                            },
                            "properties": {
                                "securityRules": [
                                    {
                                        "name": "deny-vpnCaixa-inbound",
                                        "properties": {
                                            "description": "VPN Inbound Routes (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "[parameters('caixaAddressPrefix')]",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Deny",
                                            "priority": 440,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-vnetInternals-inbound",
                                        "properties": {
                                            "description": "Internal Comunication (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 500,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "allow-azureLoadBalancer",
                                        "properties": {
                                            "description": "Load Balancer Azure (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "AzureLoadBalancer",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 510,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-inbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Inbound"
                                        }
                                    },
                                    {
                                        "name": "deny-dmzPublicUntrusted",
                                        "properties": {
                                            "description": "DmzPublicUntrusted Deny (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "[parameters('dmzPublicUntrustedPrefix')]",
                                            "access": "Deny",
                                            "priority": 450,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-dmzPrivateUntrusted",
                                        "properties": {
                                            "description": "DmzPrivateUntrusted Deny (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "[parameters('dmzPrivateUntrustedPrefix')]",
                                            "access": "Deny",
                                            "priority": 460,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-dmzL7",
                                        "properties": {
                                            "description": "DmzL7 Deny (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "[parameters('dmzL7PublicFrontEndPrefix')]",
                                            "access": "Deny",
                                            "priority": 470,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-gateway",
                                        "properties": {
                                            "description": "Gateway Deny (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "[parameters('GatewayAddressPrefix')]",
                                            "access": "Deny",
                                            "priority": 480,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "allow-vnetInternals-outbound",
                                        "properties": {
                                            "description": "Internal Comunication (*/*)",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "VirtualNetwork",
                                            "destinationAddressPrefix": "VirtualNetwork",
                                            "access": "Allow",
                                            "priority": 500,
                                            "direction": "Outbound"
                                        }
                                    },
                                    {
                                        "name": "deny-all-outbound",
                                        "properties": {
                                            "description": "Deny all traffic",
                                            "protocol": "*",
                                            "sourcePortRange": "*",
                                            "destinationPortRange": "*",
                                            "sourceAddressPrefix": "*",
                                            "destinationAddressPrefix": "*",
                                            "access": "Deny",
                                            "priority": 1000,
                                            "direction": "Outbound"
                                        }
                                    }

                                ]
                            }
                        },
                        {     
                            "name": "[concat(parameters('virtualNetworkName'), '/', variables('subnet0Name'))]",
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2015-06-15",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZManagement'))]"
                            ],
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "communications"
                            },
                            "properties": {
                                "addressPrefix": "[parameters('dmzManagementPrefix')]",
                                "networkSecurityGroup": {
                                    "id": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZManagement'))]"
                                }
                            }
                        },
                        {
                            "name": "[concat(parameters('virtualNetworkName'), '/', variables('subnet1Name'))]",
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2015-06-15",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZTrusted'))]"
                            ],
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "communications"
                            },
                            "properties": {
                                "addressPrefix": "[parameters('dmzTrustedPrefix')]",
                                "networkSecurityGroup": {
                                    "id": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZTrusted'))]"
                                }
                            }
                        },          
                        {
                            "name": "[concat(parameters('virtualNetworkName'), '/', variables('subnet2Name'))]",
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2015-06-15",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZPublicUntrusted'))]"
                            ],
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "communications"
                            },
                            "properties": {
                                "addressPrefix": "[parameters('dmzPublicUntrustedPrefix')]",
                                "networkSecurityGroup": {
                                    "id": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZPublicUntrusted'))]"
                                }
                            }
                        },          
                        {
                            "name": "[concat(parameters('virtualNetworkName'), '/', variables('subnet3Name'))]",
                            "type": "Microsoft.Network/virtualNetworks/subnets",
                            "apiVersion": "2015-06-15",
                            "location": "[resourceGroup().location]",
                            "dependsOn": [
                                "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZPrivateUntrusted'))]"
                            ],
                            "tags": {
                                "complianceProfile": "[parameters('complianceProfile')]",
                                "environment": "[parameters('environment')]",
                                "tier": "communications"
                            },
                            "properties": {
                                "addressPrefix": "[parameters('dmzPrivateUntrustedPrefix')]",
                                "networkSecurityGroup": {
                                    "id": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/networkSecurityGroups', variables('NameForNSGOfDMZPrivateUntrusted'))]"
                                }
                            }
                        }
                    ]
                },
                "parameters": {}
            }
        },
        {
            "name": "[concat(variables('nicName'), '0')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2015-06-15",
            "location": "[parameters('PAlocation')]",            
            "dependsOn": [
                "[concat('Microsoft.Resources/deployments/','VirtualNetworkExternalDeployment')]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
              "ipConfigurations": [
                {
                    "name": "[concat('ipconfig-',variables('subnet0Name'))]",
                  "properties": {
                    "privateIPAllocationMethod": "Dynamic",
                    "publicIPAddress": {
                       "id": "[resourceId('Microsoft.Network/publicIPAddresses', parameters('PAPublicIPAddressName'))]"
                    },
                    "subnet": {
