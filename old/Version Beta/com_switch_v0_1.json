{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "DNS1ServerAddress": {
            "type": "string",
            "defaultValue": "168.63.129.16",
            "metadata": {
                "description": "Domain Name Server 1"
            }
        },
        "DNS2ServerAddress": {
            "type": "string",
            "defaultValue": "168.63.129.17",
            "metadata": {
                "description": "Domain Name Server 2"
            }
        },
        "VNETName": {
            "type": "string",
            "defaultValue": "comsw-vnet",
            "metadata": {
                "description": "Name for the Virtual Network (vNet)"
            }
        },
        "VNETAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.26.16/28",
            "metadata": {
                "description": "CIDR block for the vNet"
            }
        },
        "subnetEntryExitPoint": {
            "type": "string",
            "defaultValue": "EntryExitPointSubnet",
            "metadata": {
                "description": "Name for API Manager Subnet"
            }
        },
        "subnetEntryExitPointAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.26.16/28",
            "metadata": {
                "description": "CIDR block for API Manager Subnet"
            }
        },
        "NameForNSGOfEntryExitPoint": {
            "type": "string",
            "defaultValue": "comsw-EntryExitPoint-nsg",
            "metadata": {
                "description": "Network Security Group Name for API Manager Subnet"
            }
        },        
        "ResourceIDOfSecurityHub": {
            "type": "string",
            "defaultValue": "ID",
            "metadata": {
                "description": "Resource ID string of Security Hub"
            }
        },
        "EntryPointVirtualMachineName": {
            "type": "string",
            "defaultValue": "comswsttew2",
            "metadata": {
                "description": "Name for EntryPoint Virtual Machine (VM)"
            }
        },
        "EntryPointVirtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_A4_v2",
            "metadata": {
                "description": "Size of the VM for the EntryPoint"
            }
        },
        "EntryPointVmAdminUsername": {
            "type": "string",
            "defaultValue": "systemAdmin",
            "metadata": {
                "description": "Name of admin user of the EntryPoint VM"
            }
        },
        "EntryPointVmAdminPassword": {
            "type": "securestring",
            "defaultValue": "PassWord012!",
            "metadata": {
                "description": "Password for admin user of EntryPoint VM"
            }
        },
        "EntryPointAvailabilitySets": {
            "type": "string",
            "defaultValue": "comsw-st-as1",
            "metadata": {
                "description": "Name for the Availability Set of Entry VMs"
            }
        },
        "ExitPointVirtualMachineName": {
            "type": "string",
            "defaultValue": "comswsttew3",
            "metadata": {
                "description": "Name for ExityPoint Virtual Machine (VM)"
            }
        },
        "ExitPointVirtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_A4_v2",
            "metadata": {
                "description": "Size of the VM for the ExitPoint"
            }
        },
        "ExitPointVmAdminUsername": {
            "type": "string",
            "defaultValue": "systemAdmin",
            "metadata": {
                "description": "Name of admin user of the ExitPoint VM"
            }
        },
        "ExitPointVmAdminPassword": {
            "type": "securestring",
            "defaultValue": "PassWord012!",
            "metadata": {
                "description": "Password for admin user of ExitPoint VM"
            }
        },
        "ExitPointAvailabilitySets": {
            "type": "string",
            "defaultValue": "comsw-st-as2",
            "metadata": {
                "description": "Name for the Availability Set of Entry VMs"
            }
        }
    },
    "variables": {
        "api-version": "2015-06-15",
        "subnetRef": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('VNETName'), parameters('subnetEntryExitPoint'))]",
        "peeringName": "[concat(parameters('VNETName'), '/peering-to-remote-vnet')]",
        "EntryPointVmNicName": "[concat(parameters('EntryPointVirtualMachineName'),'-nic')]",
        "ExitPointVmNicName": "[concat(parameters('ExitPointVirtualMachineName'),'-nic')]"
    },
    "resources": [
        {           
            "name": "[parameters('NameForNSGOfEntryExitPoint')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "securityRules": [
                    {
                        "name": "allow-rdp-inbound",
                        "properties": {
                            "description": "RDP Management (TCP/3389)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "https-inbound-intra",
                        "properties": {
                            "description": "HTTPS Inbound Intra (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 310,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-port10000-inbound",
                        "properties": {
                            "description": "Port 10000 Inbound (TCP/10000)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "10000",
                            "sourceAddressPrefix": "INTERNET",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 440,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-port10000-intra",
                        "properties": {
                            "description": "Port 10000 Inbound Intra (TCP/10000)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "10000",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 450,
                            "direction": "Inbound"
                        }
                    },   
                    {
                        "name": "allow-port10000-loadBalancer",
                        "properties": {
                            "description": "Port 10000 Load Balancer (TCP/10000)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "10000",
                            "sourceAddressPrefix": "AzureLoadBalancer",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 460,
                            "direction": "Inbound"
                        }
                    },                   
                    {
                        "name": "deny-all-inbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-https-outbound",
                        "properties": {
                            "description": "HTTPS Outbound (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-https-outbound-intra",
                        "properties": {
                            "description": "HTTPS Outbound Intra (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 310,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureSql",
                        "properties": {
                            "description": "Azure SQL Dependency (TCP/1433)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "1433",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 400,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureSqlDynamicPort",
                        "properties": {
                            "description": "Azure SQL Dependency v12 (TCP/10000-11999)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "10000-11999",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 410,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureSqlDynamicPort2",
                        "properties": {
                            "description": "Azure SQL Dependency v12 (TCP/14000-14999)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "14000-14999",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 420,
                            "direction": "Outbound"
                        }
                    },                    
                    {
                        "name": "allow-redis-outbound",
                        "properties": {
                            "description": "Redis Cache Dependency (TCP/6381-6383)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "6381-6383",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 430,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-port10000-outbound",
                        "properties": {
                            "description": "Port 10000 Outbound (TCP/10000)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "1000",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 440,
                            "direction": "Outbound"
                        }
                    },                  
                    {
                        "name": "deny-all-outbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Outbound"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('VNETName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "[variables('api-version')]",            
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('NameForNSGOfEntryExitPoint'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNETAddressPrefix')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('DNS1ServerAddress')]",
                        "[parameters('DNS2ServerAddress')]"
                    ]
                },
                "subnets": [
                    {                        
                        "name": "[parameters('subnetEntryExitPoint')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetEntryExitPointAddressPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups/', parameters('NameForNSGOfEntryExitPoint'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[variables('peeringName')]",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2016-06-01",
            "location": "[resourceGroup().location]",   
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "properties": {
                "allowVirtualNetworkAccess": "true",
                "allowForwardedTraffic": "false",
                "allowGatewayTransit": "false",
                "useRemoteGateways": "false",
                "remoteVirtualNetwork": {
                    "id": "[parameters('ResourceIDOfSecurityHub')]"
                }
            }
        },
        {
            "name": "[variables('EntryPointVmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig-', parameters('EntryPointVirtualMachineName'))]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }                            
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('EntryPointAvailabilitySets')]",
            "location": "[resourceGroup().location]", 
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "frontEnd"
            },
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformUpdateDomainCount": 10,
                "platformFaultDomainCount": 3,
                "virtualMachines": []
            }
        },
        {
            "name": "[parameters('EntryPointVirtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",            
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('EntryPointVmNicName'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('EntryPointAvailabilitySets'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "alm"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',parameters('EntryPointAvailabilitySets'))]"
                },
                "licenseType": "Windows_Server",
                "hardwareProfile": {
                    "vmSize": "[parameters('EntryPointVirtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('EntryPointVirtualMachineName')]",
                    "adminUsername": "[parameters('EntryPointVmAdminUsername')]",
                    "adminPassword": "[parameters('EntryPointVmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },                
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('EntryPointVmNicName'))]"
                        }
                    ]
                }                
            }
        },
        {
            "name": "[concat('microsoft.antimalware-windows-', parameters('EntryPointVirtualMachineName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('EntryPointVirtualMachineName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://gallery.azure.com/artifact/20161101/microsoft.antimalware-windows-arm.1.0.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('EntryPointVirtualMachineName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "1"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            }
        },
        {
            "name": "[variables('ExitPointVmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig-', parameters('ExitPointVirtualMachineName'))]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }                            
                        }
                    }
                ]
            }
        },
        {
            "apiVersion": "2017-03-30",
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('ExitPointAvailabilitySets')]",
            "location": "[resourceGroup().location]", 
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "integration"
            }, 
            "sku": {
                "name": "Aligned"
            },
            "properties": {
                "platformUpdateDomainCount": 10,
                "platformFaultDomainCount": 3,
                "virtualMachines": []
            }
        },
        {
            "name": "[parameters('ExitPointVirtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",            
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('ExitPointVmNicName'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('ExitPointAvailabilitySets'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "alm"
            },
            "properties": {
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets',parameters('ExitPointAvailabilitySets'))]"
                },
                "licenseType": "Windows_Server",
                "hardwareProfile": {
                    "vmSize": "[parameters('ExitPointVirtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('ExitPointVirtualMachineName')]",
                    "adminUsername": "[parameters('ExitPointVmAdminUsername')]",
                    "adminPassword": "[parameters('ExitPointVmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2016-Datacenter",
                        "version": "latest"
                    },                
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('ExitPointVmNicName'))]"
                        }
                    ]
                }                
            }
        },
        {
            "name": "[concat('microsoft.antimalware-windows-', parameters('ExitPointVirtualMachineName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('ExitPointVirtualMachineName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://gallery.azure.com/artifact/20161101/microsoft.antimalware-windows-arm.1.0.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('ExitPointVirtualMachineName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "1"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            }
        }      
    ]
}