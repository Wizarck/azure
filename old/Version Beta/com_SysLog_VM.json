{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "virtualNetworkSuscriptionID": {
            "type":"string",
            "allowedValues": [
                "dbc7e692-0f8a-4519-a281-2c6d15890518",
                "ea645d5f-08ed-4f30-a964-e13952e55328"
            ],
            "defaultValue": "ea645d5f-08ed-4f30-a964-e13952e55328",
            "metadata": {
                "description": "Suscription ID of Virtual Network Monitoring"
            }
        },
        "virtualNetworkResourceGroup": {
            "type": "string",
            "allowedValues": [
                "comit-p-rg1",
                "comit-r-rg1",
                "comit-t-rg1"
            ],
            "defaultValue": "comws-t-rg1",
            "metadata": {
                "description": "Resource Group of Virtual Network Monitoring"
            }
        },
        "workspaceName": {
            "type": "string",
            "allowedValues": [
                "comitwspew1",
                "comitwsrew1",
                "comitwstew1"
            ],
            "defaultValue": "comitwstew1",
            "metadata": {
                "description": "Define Workspace"
            }
        },
        "VmName": {
            "type": "string",
            "allowedValues": [
                "comitstpew1",
                "comitstrew1",
                "comitsttew1"
            ],
            "defaultValue": "comitsttew1",
            "metadata": {
                "description": "Name for the VM"
            }
        },
        "virtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_D1_v2"
        },
        "VmAdminUsername": {
            "type": "string",
            "defaultValue": "Administrador",
            "metadata": {
                "description": "Name of admin user of VM"
            }
        },
        "VmAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for admin user of VM"
            }
        }
    },
    "variables": {
        "networkInterfaceName":"[concat(parameters('VmName'),'-nic')]",
        "MonitoringVNET": "comit-vnet1",
        "SubnetName": "Monitoring",
        "subnetRef": "[resourceId(parameters('virtualNetworkSuscriptionID'),parameters('virtualNetworkResourceGroup'),'Microsoft.Network/virtualNetworks/subnets', variables('MonitoringVNET'), variables('SubnetName'))]"
    },
    "resources": [
        {
            "name": "[variables('networkInterfaceName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "dependsOn": [],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat(parameters('VmName'),'-ipconfig')]",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('VmName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "alm"
            },
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('VmName')]",
                    "adminUsername": "[parameters('VmAdminUsername')]",
                    "adminPassword": "[parameters('VmAdminPassword')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('virtualMachineSize')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "RedHat",
                        "offer": "RHEL",
                        "sku": "7.3",
                        "version": "latest"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Standard_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                }
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('VmName'),'/OMSExtension')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "dependsOn": [
              "[concat('Microsoft.Compute/virtualMachines/', parameters('VmName'))]"
            ],
            "properties": {
                "publisher": "Microsoft.EnterpriseCloud.Monitoring",
                "type": "OmsAgentForLinux",
                "typeHandlerVersion": "1.4",
                "settings": {
                    "workspaceId": "[reference(resourceId(resourceGroup().name,'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').customerId]"
                },
                "protectedSettings": {
                    "workspaceKey": "[listKeys(resourceId(resourceGroup().name,'Microsoft.OperationalInsights/workspaces/', parameters('workspaceName')), '2015-03-20').primarySharedKey]"
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('VmAdminUsername')]"
        }
    }
}