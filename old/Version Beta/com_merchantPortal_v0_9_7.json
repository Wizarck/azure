{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "complianceProfile": {
            "type": "string",
            "allowedValues": [
				"no-pci",
                "pci"
            ],
            "defaultValue": "no-pci",
            "metadata": {
                "description": "PCI or no-PCI"
            }
        },
        "environment": {
            "type": "string",
            "allowedValues": [
				"production",
                "preproduction",
                "development"
            ],
            "defaultValue": "development",
            "metadata": {
                "description": "Define environment to deploy in"
            }
        },
        "DNS1ServerAddress": {
            "type": "string",
            "defaultValue": "168.63.129.16",
            "metadata": {
                "description": "Domain Name Server 1"
            }
        },
        "DNS2ServerAddress": {
            "type": "string",
            "defaultValue": "168.63.129.17",
            "metadata": {
                "description": "Domain Name Server 2"
            }
        },
        "ResourceIDOfSecurityHubVNET": {
            "type": "string",
            "metadata": {
                "description": "Resource ID string of Security Hub VNET"
            }
        },
        "peeringName": {
            "type": "string",
            "defaultValue": "commp-t-rg1-commp-vnet1-comit-t-rg1-comit-vnet1",
            "metadata": {
                "description": "Name for the vNet Peering with Security Hub vNet"
            }
        },
        "VNETName": {
            "type": "string",
            "defaultValue": "commp-vnet1",
            "metadata": {
                "description": "Name for the Virtual Network (vNet)"
            }
        },
        "VNETAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.32/27",
            "metadata": {
                "description": "CIDR block for the vNet"
            }
        },
        "ASESubnetName": {
            "type": "string",
            "defaultValue": "commptew1",
            "metadata": {
                "description": "Name for the Application Service Enviroment (ASE) Subnet"
            }
        },
        "ASESubnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.32/28",
            "metadata": {
                "description": "CIDR block for the Application Service Enviroment (ASE) Subnet"
            }
        },
        "NameForNSGOfASE": {
            "type": "string",
            "defaultValue": "comit-LOB1-nsg",
            "metadata": {
                "description": "Network Security Group Name the Application Service Enviroment (ASE) Subnet"
            }
        },
        "VSTSSubnetName": {
            "type": "string",
            "defaultValue": "commptew2",
            "metadata": {
                "description": "Name for VSTS Hosted Agent"
            }
        },
        "VSTSSubnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.25.25.56/29",
            "metadata": {
                "description": "CIDR block for VSTS Hosted Agent Subnet"
            }
        },
        "NameForNSGOfVSTSHostedAgent": {
            "type": "string",
            "defaultValue": "comit-LOB2-nsg",
            "metadata": {
                "description": "Network Security Group Name for VSTS Hosted Agent Subnet"
            }
        },
        "ASEName": {
            "type": "string",
            "defaultValue": "comitaetew",
            "metadata": {
                "description": "Name for the App Service Environment (ASE)"
            }
        }, 
        "ASELocation": { 
            "type": "string",             
            "allowedValues": [ 
                "North Europe", 
                "West Europe"
            ], 
            "defaultValue": "West Europe",
            "metadata": {
                "description": "Location for the App Service Environment (ASE)"
            }
        },        
        "ASECertificateName": {
            "type": "string",
            "metadata": {
                "description": "Name of the certificate for the App Service Environment (ASE)"
            }
        },
        "ASE64PFXServerCertificate": {
            "type": "string",
            "metadata": {
                "description": "Encoded 64 PFX Server Certificate for App Service Environment (ASE)"
            }
        },
        "ASEPassword": {
            "type": "string",
            "metadata": {
                "description": "Password for the PFX Server Certificate of the App Service Environment (ASE)"
            }
        },
        "ASEDnsSuffix": {
            "type": "string",
            "defaultValue": "commpaetew.internal.icomerciagp-dev-com",
            "metadata": {
                "description": "Set this to the root domain associated with the App Service Environment (ASE)"
            }
        },
        "ASEFrontEndSize": {
            "type": "string",
            "allowedValues": [
                "Medium",
                "Large",
                "ExtraLarge"
            ],
            "defaultValue": "Medium",
            "metadata": {
                "description": "Instance size for the front-end pool.  Maps to P2,P3,P4."
            }
        },
        "ASEFrontEndCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "Number of instances in the front-end pool.  Minimum of two."
            }
        },
        "ASEWorkerPoolOneInstanceSize": {
            "type": "string",
            "allowedValues": [
                "Small",
                "Medium",
                "Large",
                "ExtraLarge"
            ],
            "defaultValue": "Small",
            "metadata": {
                "description": "Instance size for worker pool one.  Maps to P1,P2,P3,P4."
            }
        },
        "ASEWorkerPoolOneInstanceCount": {
            "type": "int",
            "defaultValue": 2,
            "metadata": {
                "description": "Number of instances in worker pool one.  Minimum of two."
            }
        },
        "ASEWorkerPoolTwoInstanceSize": {
            "type": "string",
            "allowedValues": [
                "Small",
                "Medium",
                "Large",
                "ExtraLarge"
            ],
            "defaultValue": "Small",
            "metadata": {
                "description": "Instance size for worker pool two.  Maps to P1,P2,P3,P4."
            }
        },
        "ASEWorkerPoolTwoInstanceCount": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Number of instances in worker pool two.  Can be zero if not using worker pool two."
            }
        },
        "ASEWorkerPoolThreeInstanceSize": {
            "type": "string",
            "allowedValues": [
                "Small",
                "Medium",
                "Large",
                "ExtraLarge"
            ],
            "defaultValue": "Small",
            "metadata": {
                "description": "Instance size for worker pool three.  Maps to P1,P2,P3,P4."
            }
        },
        "ASEWorkerPoolThreeInstanceCount": {
            "type": "int",
            "defaultValue": 0,
            "metadata": {
                "description": "Number of instances in worker pool three.  Can be zero if not using worker pool three."
            }
        },
        "VSTSVirtualMachineName": {
            "type": "string",
            "defaultValue": "commpsttew1",
            "metadata": {
                "description": "Name for VSTS Hosted Agent Virtual Machine (VM)"
            }
        },
        "VSTSVirtualMachineSize": {
            "type": "string",
            "defaultValue": "Standard_DS2_v2",
            "metadata": {
                "description": "Size of the VM for the VSTS Hosted Agent"
            }
        },
        "VSTSVmAdminUsername": {
            "type": "string",
            "defaultValue": "systemAdmin",
            "metadata": {
                "description": "Name of admin user of the VSTS Hosted Agent VM"
            }
        },
        "VSTSVmAdminPassword": {
            "type": "securestring",
            "defaultValue": "PassWord012!",
            "metadata": {
                "description": "Password for admin user of VSTS Hosted Agent VM"
            }
        },
        "sqlServerName": {
            "type": "string",
            "metadata": {
                "description": "Name for the server of the SQL DB"
            },
            "defaultValue": "sqlservertest"
        },
        "sqlAdminLogin": {
            "type": "string",
            "metadata": {
                "description": "Login for the SQL Admin User"
            },
            "defaultValue": "systemAdmin"
        },
        "sqlAdminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "Password for the SQL Admin User"
            },
            "defaultValue": "PassWord01!"
        }
    },
    "variables": {
        "subnetRef": "[resourceId(resourceGroup().name, 'Microsoft.Network/virtualNetworks/subnets', parameters('VNETName'), parameters('VSTSSubnetName'))]",
        "VSTSVmNicName": "[concat(parameters('VSTSVirtualMachineName'),'-nic')]"
    },
    "resources": [
        {
            "name": "[parameters('NameForNSGOfASE')]",            
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "security"
            },
            "properties": {
                "mode":"incremental",
                "securityRules": [  
                    {
                        "name": "allow-azureAseMgmt-1",
                        "properties": {
                            "description": "Azure App Services Management via SSL (TCP/454)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "454",
                            "sourceAddressPrefix": "INTERNET",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 130,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-azureAseMgmt-2",
                        "properties": {
                            "description": "Azure App Services Management via SSL (TCP/455)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "455",
                            "sourceAddressPrefix": "INTERNET",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 140,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-https-inbound",
                        "properties": {
                            "description": "HTTPS Azure Sync and Web (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "INTERNET",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Inbound"
                        }
                    },    
                    {
                        "name": "allow-https-inbound-intra",
                        "properties": {
                            "description": "HTTPS Azure Sync and Web (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 310,
                            "direction": "Inbound"
                        }
                    }, 
                    {
                        "name": "allow-aseInternals-inbound",
                        "properties": {
                            "description": "ASE Internal Comunication (TCP/*)",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 500,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-azureLoadBalancer",
                        "properties": {
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "AzureLoadBalancer",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 510,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "deny-all-inbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-dns1",
                        "properties": {
                            "description": "DNS (UDP/53)",
                            "protocol": "UDP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "53",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 200,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-dns2",
                        "properties": {
                            "description": "DNS (UDP/53)",
                            "protocol": "UDP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "53",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 210,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureFiles",
                        "properties": {
                            "description": "Azure Files Services (TCP/445)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "445",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 220,
                            "direction": "Outbound"
                        }
                    },              
                    {
                        "name": "allow-https-outbound",
                        "properties": {
                            "description": "HTTPS Azure Sync and Web (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Outbound"
                        }
                    },    
                    {
                        "name": "allow-https-outbound-intra",
                        "properties": {
                            "description": "HTTPS Azure Sync and Web (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 310,
                            "direction": "Outbound"
                        }
                    },  
                    {
                        "name": "allow-http-outbound",
                        "properties": {
                            "description": "HTTP Azure Sync and Web (TCP/80)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 320,
                            "direction": "Outbound"
                        }
                    },    
                    {
                        "name": "allow-http-outbound-intra",
                        "properties": {
                            "description": "HTTP Azure Sync and Web (TCP/80)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "80",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 330,
                            "direction": "Outbound"
                        }
                    },  
                    {
                        "name": "allow-azureSql",
                        "properties": {
                            "description": "Azure SQL Dependency (TCP/1433)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "1433",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 400,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureSqlDynamicPort",
                        "properties": {
                            "description": "Azure SQL Dependency v12 (TCP/10000-11999)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "10000-11999",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 410,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-azureSqlDynamicPort2",
                        "properties": {
                            "description": "Azure SQL Dependency v12 (TCP/14000-14999)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "14000-14999",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 420,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-aseInternals-Outbound",
                        "properties": {
                            "description": "ASE Internal Comunication (TCP/*)",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 500,
                            "direction": "Outbound"
                        }
                    },       
                    {
                        "name": "deny-all-outbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Outbound"
                        }
                    }                                          
                ]
            }
        },
        {           
            "name": "[parameters('NameForNSGOfVSTSHostedAgent')]",
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "security"
            },
            "properties": {
                "mode":"incremental",
                "securityRules": [   
                    {
                        "name": "allow-rdp",
                        "properties": {
                            "description": "RDP Management (TCP/3389)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "3389",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 110,
                            "direction": "Inbound"
                        }
                    },  
                    {
                        "name": "allow-sshManagement-inbound",
                        "properties": {
                            "description": "SSH Management (TCP/22)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "22",
                            "sourceAddressPrefix": "INTERNET",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 160,
                            "direction": "Inbound"
                        }
                    },  
                    {
                        "name": "deny-all-inbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "allow-dns",
                        "properties": {
                            "description": "DNS (UDP/53)",
                            "protocol": "UDP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "53",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 200,
                            "direction": "Outbound"
                        }
                    },
                    {
                        "name": "allow-SMB-outbound",
                        "properties": {
                            "description": "SMB Outbound fo App Deployment (TCP/445)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "445",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "*",
                            "access": "Allow",
                            "priority": 210,
                            "direction": "Outbound"
                        }
                    },         
                    {
                        "name": "allow-https-outbound",
                        "properties": {
                            "description": "HTTPS Azure Sync and Web (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "INTERNET",
                            "access": "Allow",
                            "priority": 300,
                            "direction": "Outbound"
                        }
                    },    
                    {
                        "name": "allow-httpsToASE",
                        "properties": {
                            "description": "HTTPS to ASE (TCP/443)",
                            "protocol": "TCP",
                            "sourcePortRange": "*",
                            "destinationPortRange": "443",
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 310,
                            "direction": "Outbound"
                        }
                    },  
                    {
                        "name": "deny-all-outbound",
                        "properties": {
                            "description": "Deny all traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "*",
                            "destinationAddressPrefix": "*",
                            "access": "Deny",
                            "priority": 1000,
                            "direction": "Outbound"
                        }
                    }                               
                ]
            }
        },
        {
            "name": "[parameters('VNETName')]",
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2015-06-15",             
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('NameForNSGOfASE'))]",
                "[concat('Microsoft.Network/networkSecurityGroups/', parameters('NameForNSGOfVSTSHostedAgent'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "mode": "Incremental",
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('VNETAddressPrefix')]"
                    ]
                },
                "dhcpOptions": {
                    "dnsServers": [
                        "[parameters('DNS1ServerAddress')]",
                        "[parameters('DNS2ServerAddress')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[parameters('ASESubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('ASESubnetAddressPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('NameForNSGOfASE'))]"
                            }
                        }
                    },
                    {
                        "name": "[parameters('VSTSSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('VSTSSubnetAddressPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('NameForNSGOfVSTSHostedAgent'))]"
                            }
                        }
                    }
                ]
            }
        },
        {
            "name": "[concat(parameters('VNETName'),'/',parameters('peeringName'))]",
            "type": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings",
            "apiVersion": "2016-06-01",           
            "location": "[resourceGroup().location]",   
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "properties": {
                "allowVirtualNetworkAccess": "true",
                "allowForwardedTraffic": "false",
                "allowGatewayTransit": "false",
                "useRemoteGateways": "false",
                "remoteVirtualNetwork": {
                    "id": "[parameters('ResourceIDOfSecurityHubVNET')]"
                }
            }
        },
        {
            "name": "[parameters('ASEName')]",
            "type": "Microsoft.Web/hostingEnvironments",     
            "apiVersion": "2015-08-01",                   
            "location": "[parameters('ASELocation')]", 
            "kind": "ASEV1",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "backend"
            },
            "properties": {
                "name": "[parameters('ASEName')]",
                "location": "[parameters('ASELocation')]", 
                "ipSslAddressCount":0,
                "internalLoadBalancingMode": 3,
                "dnsSuffix" : "[parameters('ASEDnsSuffix')]",
                "virtualNetwork": {
                    "type": "Microsoft.Network/virtualNetworks",
                    "Id": "[resourceId('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]",
                    "Subnet": "[parameters('ASESubnetName')]"
                },
                "multiSize": "[parameters('ASEFrontEndSize')]",
                "multiRoleCount": "[parameters('ASEFrontEndCount')]",
                "workerPools": [
                    {
                        "workerSizeId": 0,
                        "workerSize": "[parameters('ASEWorkerPoolOneInstanceSize')]",
                        "workerCount": "[parameters('ASEWorkerPoolOneInstanceCount')]"
                    },
                    {
                        "workerSizeId": 1,
                        "workerSize": "[parameters('ASEWorkerPoolTwoInstanceSize')]",
                        "workerCount": "[parameters('ASEWorkerPoolTwoInstanceCount')]"
                    },
                    {
                        "workerSizeId": 2,
                        "workerSize": "[parameters('ASEWorkerPoolThreeInstanceSize')]",
                        "workerCount": "[parameters('ASEWorkerPoolThreeInstanceCount')]"
                    }
                ]
            }
        },
        {
            "name": "[parameters('ASECertificateName')]",
            "type": "Microsoft.Web/certificates",
            "apiVersion": "2015-08-01",
            "location": "[parameters('ASELocation')]",
            "dependsOn": [
                "[concat('Microsoft.Web/hostingEnvironments/',parameters('ASEName'))]"
            ],
            "properties": {
                "pfxBlob": "[parameters('ASE64PFXServerCertificate')]",
                "password": "[parameters('ASEPassword')]",
                "hostingEnvironmentProfile": {
                     "id": "[resourceId('Microsoft.Web/hostingEnvironments/',parameters('ASEName'))]"
                }
            }
        },
        {
            "name": "[variables('VSTSVmNicName')]",
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2016-03-30",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Network/virtualNetworks/', parameters('VNETName'))]"
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "communications"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "[concat('ipconfig-',variables('VSTSVmNicName'))]",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "subnet": {
                                "id": "[variables('subnetRef')]"
                            }                            
                        }
                    }
                ]
            }
        },
        {
            "name": "[parameters('VSTSVirtualMachineName')]",
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",            
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('VSTSVmNicName'))]"       
            ],
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "alm"
            },
            "properties": {
                "licenseType": "Windows_Server",
                "hardwareProfile": {
                    "vmSize": "[parameters('VSTSVirtualMachineSize')]"
                },
                "osProfile": {
                    "computerName": "[parameters('VSTSVirtualMachineName')]",
                    "adminUsername": "[parameters('VSTSVmAdminUsername')]",
                    "adminPassword": "[parameters('VSTSVmAdminPassword')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftVisualStudio",
                        "offer": "VisualStudio",
                        "sku": "VS-2017-Ent-Latest-WS2016",
                        "version": "latest"
                    },                
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    },
                    "dataDisks": []
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('VSTSVmNicName'))]"
                        }
                    ]
                }                
            }
        },
        {
            "name": "[concat('antimalware-',parameters('VSTSVirtualMachineName'))]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2015-01-01",
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('VSTSVirtualMachineName'))]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://gallery.azure.com/artifact/20161101/microsoft.antimalware-windows-arm.1.0.0/Artifacts/MainTemplate.json"
                },
                "parameters": {
                    "vmName": {
                        "value": "[parameters('VSTSVirtualMachineName')]"
                    },
                    "location": {
                        "value": "[resourceGroup().location]"
                    },
                    "RealtimeProtectionEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsIsEnabled": {
                        "value": "true"
                    },
                    "ScheduledScanSettingsScanType": {
                        "value": "Quick"
                    },
                    "ScheduledScanSettingsDay": {
                        "value": "1"
                    },
                    "ScheduledScanSettingsTime": {
                        "value": "120"
                    }
                }
            }
        },
        {
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Sql/servers",
            "location": "[resourceGroup().location]",
            "tags": {
                "complianceProfile": "[parameters('complianceProfile')]",
                "environment": "[parameters('environment')]",
                "tier": "data"
            },
            "name": "[parameters('sqlServerName')]",
            "properties": {
                "administratorLogin": "[parameters('sqlAdminLogin')]",
                "administratorLoginPassword": "[parameters('sqlAdminPassword')]",
                "version": "12.0"
            },
            "resources": [
                {
                    "apiVersion": "2014-04-01-preview",
                    "type": "firewallrules",
                    "dependsOn": [
                        "[concat('Microsoft.Sql/servers/', parameters('sqlServerName'))]"
                    ],
                    "location": "[resourceGroup().location]",
                    "name": "AllowAllWindowsAzureIps",
                    "properties": {
                        "endIpAddress": "0.0.0.0",
                        "startIpAddress": "0.0.0.0"
                    }                    
                }
            ]            
        } 
    ]
}